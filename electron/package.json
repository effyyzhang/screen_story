{
  "name": "screen-story-electron",
  "version": "1.0.0",
  "description": "Screen Story - Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "electron": "^28.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.effyzhang.screenstory",
    "productName": "Screen Story",
    "files": [
      "main.js",
      "../server.js",
      "../ui/**/*",
      "../lib/**/*",
      "../*.js",
      "../package.json",
      "../node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"],
      "icon": "icon.icns"
    }
  }
}
