{
  "name": "screen-story-electron",
  "version": "1.0.0",
  "description": "Screen Story - Desktop App",
  "author": "Effy Zhang",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.effyzhang.screenstory",
    "productName": "Screen Story",
    "files": [
      "main.js",
      "preload.js",
      "../server.js",
      "../capture-daemon.js",
      "../lib/**/*",
      "../ui-redesign/**/*",
      "!../ui-redesign/node_modules",
      "../sessions/**/*",
      "../*.js",
      "../package.json",
      "../node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"]
    }
  }
}
